{
    "compilerOptions": {
        "paths": {
            "theme-mode": [ "./node_modules/core/src" ],
            "@master/theme-mode.react": [ "./node_modules/react/src" ],
            "@master/theme-mode.vue": [ "./node_modules/vue/src" ]
        },
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Bundler",
        "lib": [
            "esnext",
            "dom"
        ],
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "**/dist/**",
        "**/node_modules/**"
    ]
}